<?xml version="1.0" encoding="UTF-8"?>
<MOML>

	<FUNCTIONLIST>

		<FUNCTION id="toHome">

			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchMain&apos;)" />

			<FUNCTION id="toSerch">

				<FUNCTIONITEM
					cmd="action:go(&apos;root.navigation&apos;,&apos;SerchDetail&apos;)" />
			</FUNCTION>

			<FUNCTION id="toLocation">

				<FUNCTIONITEM
					cmd="action:go(&apos;root.navigation&apos;,&apos;SerchLocation&apos;)" />
			</FUNCTION>
		</FUNCTION>
	</FUNCTIONLIST>

	<UI>

		<UILAYOUT landscape="1080,1920" portrait="1080,1920">

			<WINDOW align="relative" defaultImg="embed:/res/pri_28/bg.png"
				layout="0,0,1080,1920">

				<IMAGE defaultImg="embed:/res/pri_28/gray_box.png" layout="40,237,1000,140">
					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1000,140"
						text="推荐折扣券" textAlign="center" />
				</IMAGE>


				<IMAGE defaultImg="embed:/res/pri_28/list_box.png" layout="40,430,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="390,430,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="740,430,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="40,830,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="390,830,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="740,830,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="40,1230,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="390,1230,300,350" />

				<IMAGE defaultImg="embed:/res/pri_28/list_off.png" layout="740,1230,300,350" />

				<WINDOW defaultImg="#ff0000" layout="0,0,1080,120">

					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,120"
						text="推荐折扣券" textAlign="center" />

					<BUTTON defaultImg="embed:/res/pri/home_button.png" layout="25,15,220,90"
						onClick="{function.toHome}" />

					<BUTTON defaultImg="embed:/res/pri/red_position_off.png"
						layout="815,10,100,100" prossedImg="embed:/res/pri/red_position_on.png"
						onClick="{function.toLocation}" />

					<BUTTON defaultImg="embed:/res/pri/red_search_off.png"
						layout="940,10,100,100" onClick="{function.toSerch}" prossedImg="embed:/res/pri/red_search_on.png" />
				</WINDOW>
			</WINDOW>
		</UILAYOUT>
	</UI>

</MOML>