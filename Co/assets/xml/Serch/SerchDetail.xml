<?xml version="1.0" encoding="UTF-8"?>
<MOML>

    <FUNCTIONLIST>

        <FUNCTION id="toHome" >

            <FUNCTIONITEM cmd="action:go(&apos;root.navigation&apos;,&apos;SerchMain&apos;)" />
        </FUNCTION>

        <FUNCTION id="toDetail" >

            <FUNCTIONITEM cmd="action:go(&apos;root.navigation&apos;,&apos;Detail&apos;)" />
        </FUNCTION>
    </FUNCTIONLIST>

    <UI>

        <UILAYOUT
            landscape="1080,1920"
            portrait="1080,1920" >

            <WINDOW
                align="relative"
                defaultImg="embed:/res/pri_9/bg.png"
                layout="0,0,1080,1920" >

                <WINDOW
                    align="linear:vertical"
                    layout="40,250,1001,850" >

                    <IMAGE
                        align="relative"
                        defaultImg="embed:/res/pri_9/gray_box_1.png"
                        layout="1001,142" >
                        <LABEL fontColor="#ffffff" layout="0,0,360,141" text="关键字" textAlign="center" fontSize="72"/>
                    </IMAGE>

                    <IMAGE
                        align="relative"
                        defaultImg="embed:/res/pri_9/gray_box_2.png"
                        layout="1001,142" >
                        <LABEL fontColor="#ffffff" layout="0,0,360,141" text="地区" textAlign="center" fontSize="72"/>
                        <LABEL fontColor="#ffffff" layout="400,0,620,141" text="当前位置" textAlign="center" fontSize="72"/>
                    </IMAGE>

                    <IMAGE
                        align="relative"
                        defaultImg="embed:/res/pri_9/gray_box_2.png"
                        layout="1001,142" >
                        <LABEL fontColor="#ffffff" layout="0,0,360,141" text="行业" textAlign="center" fontSize="72"/>
                        <LABEL fontColor="#ffffff" layout="400,0,620,141" text="所有行业" textAlign="center" fontSize="72"/>
                    </IMAGE>

                    <IMAGE
                        align="relative"
                        defaultImg="embed:/res/pri_9/gray_box_2.png"
                        layout="1001,142" >
                        <LABEL fontColor="#ffffff" layout="0,0,360,141" text="评分" textAlign="center" fontSize="72"/>
                        <LABEL fontColor="#ffffff" layout="400,0,620,141" text="所有评分" textAlign="center" fontSize="72"/>
                    </IMAGE>

                    <IMAGE
                        align="relative"
                        defaultImg="embed:/res/pri_9/gray_box_3.png"
                        layout="1001,140" >
                        <LABEL fontColor="#ffffff" layout="0,0,360,141" text="外语支持" textAlign="center" fontSize="72"/>
                        <LABEL fontColor="#ffffff" layout="400,0,620,141" text="所有语言" textAlign="center" fontSize="72"/>
                    </IMAGE>
                </WINDOW>

                <BUTTON
                    defaultImg="embed:/res/pri_9/gray_box.png"
                    layout="314,1580,452,91"
                    text="搜索"
                    onClick="{function.toDetail}"
                     />

                <WINDOW
                    defaultImg="#ff0000"
                    layout="0,0,1080,120" >

                    <LABEL
                        fontColor="#ffffff"
                        fontSize="72"
                        layout="0,0,1080,120"
                        text="详细搜索"
                        textAlign="center" />

                    <BUTTON
                        defaultImg="embed:/res/pri/home_button.png"
                        layout="25,15,220,90"
                        onClick="{function.toHome}" />

                    <BUTTON
                        defaultImg="embed:/res/pri/red_position_off.png"
                        layout="815,10,100,100"
                        prossedImg="embed:/res/pri/red_position_on.png" />

                    <BUTTON
                        defaultImg="embed:/res/pri/red_search_off.png"
                        layout="940,10,100,100"
                        prossedImg="embed:/res/pri/red_search_on.png" />
                </WINDOW>
            </WINDOW>
        </UILAYOUT>
    </UI>

</MOML>