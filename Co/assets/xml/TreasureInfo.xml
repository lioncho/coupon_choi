<?xml version="1.0" encoding="UTF-8"?>
<MOML>

	<FUNCTIONLIST>
		<FUNCTION id="toHome">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchMain&apos;)" />
		</FUNCTION>
		<FUNCTION id="toSerch">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchDetail&apos;)" />
		</FUNCTION>

		<FUNCTION id="toLocation">

			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchLocation&apos;)" />
		</FUNCTION>
	</FUNCTIONLIST>

	<UI>
		<UILAYOUT landscape="1080,1920" portrait="1080,1920">
			<WINDOW align="relative" defaultImg="embed:/res/pri_22/bg.png"
				layout="0,0,1080,1920">
				<WINDOW align="relative" layout="0,120,1080,415">
					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,140"
						text="Step 1." textAlign="center">
						<IMAGE defaultImg="embed:/res/pri_22/jewel.png" layout="320,10,110,84" />
					</LABEL>

					<IMAGE align="linear:vCenter" defaultImg="embed:/res/pri_22/gary_arrow_box.png"
						layout="0,115,1080,299">
						<IMAGE defaultImg="embed:/res/pri_22/memo.png" layout="140,158"
							margin="120,150,0,0" />

						<WINDOW align="flow" layout="550,300" margin="180,180,0,0">
							<LABEL fontColor="#ffffff" fontSize="52" text="收到特殊任务推送信息"
								textAlign="default" />
							<LABEL fontColor="#ffffff" fontSize="52" text="收到信息后，点击链接"
								textAlign="default" />
						</WINDOW>
					</IMAGE>
				</WINDOW>
				<WINDOW align="relative" layout="0,560,1080,415">
					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,140"
						text="Step 2." textAlign="center">
						<IMAGE defaultImg="embed:/res/pri_22/jewel.png" layout="320,10,110,84" />
					</LABEL>

					<IMAGE align="linear:vCenter" defaultImg="embed:/res/pri_22/gary_arrow_box.png"
						layout="0,115,1080,299">
						<IMAGE defaultImg="embed:/res/pri_22/view.png" layout="144,136"
							margin="120,180,0,0" />

						<WINDOW align="flow" layout="700,300" margin="130,250,0,0">
							<LABEL fontColor="#ffffff" fontSize="52" text="在地图确认藏宝地点后赶往。"
								textAlign="default" />
						</WINDOW>
					</IMAGE>
				</WINDOW>
				<WINDOW align="relative" layout="0,1000,1080,415">
					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,140"
						text="Step 3." textAlign="center">
						<IMAGE defaultImg="embed:/res/pri_22/jewel.png" layout="320,10,110,84" />
					</LABEL>

					<IMAGE align="linear:vCenter" defaultImg="embed:/res/pri_22/gary_arrow_box.png"
						layout="0,115,1080,299">
						<IMAGE defaultImg="embed:/res/pri_22/distance.png" layout="220,110"
							margin="120,200,0,0" />

						<WINDOW align="flow" layout="700,300" margin="110,250,0,0">
							<LABEL fontColor="#ffffff" fontSize="52" text="在500米内寻找宝物"
								textAlign="default" />

						</WINDOW>
					</IMAGE>
				</WINDOW>

				<WINDOW align="relative" layout="0,1440,1080,415">
					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,140"
						text="Step 4." textAlign="center">
						<IMAGE defaultImg="embed:/res/pri_22/jewel.png" layout="320,10,110,84" />
					</LABEL>

					<IMAGE align="linear:vCenter" defaultImg="embed:/res/pri_22/gary_arrow_box.png"
						layout="0,115,1080,299">
						<IMAGE defaultImg="embed:/res/pri_22/QR.png" layout="164,158"
							margin="120,150,0,0" />

						<WINDOW align="flow" layout="700,300" margin="90,180,0,0">
							<LABEL fontColor="#ffffff" fontSize="52" text="扫二维码会生成相关折扣券。"
								textAlign="default" />
							<LABEL fontColor="#ffffff" fontSize="52" text="扫二维码"
								textAlign="default" />
						</WINDOW>
					</IMAGE>
				</WINDOW>
				<WINDOW defaultImg="#ff0000" layout="0,0,1080,120">
					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,120"
						text="寻宝系统使用介绍" textAlign="center" />

					<BUTTON defaultImg="embed:/res/pri/home_button.png" layout="25,15,220,90"
						onClick="{function.toHome}" />
					<BUTTON defaultImg="embed:/res/pri/red_position_off.png"
						layout="815,10,100,100" prossedImg="embed:/res/pri/red_position_on.png" onClick="{function.toLocation}"/>
					<BUTTON defaultImg="embed:/res/pri/red_search_off.png"
						layout="940,10,100,100" onClick="{function.toSerch}" prossedImg="embed:/res/pri/red_search_on.png" />
				</WINDOW>
			</WINDOW>
		</UILAYOUT>
	</UI>

</MOML>