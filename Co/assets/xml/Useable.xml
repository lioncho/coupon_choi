<?xml version="1.0" encoding="UTF-8"?>
<MOML>

    <FUNCTIONLIST>
        <FUNCTION id="toHome" >
            <FUNCTIONITEM cmd="action:go(&apos;root.navigation&apos;,&apos;SerchMain&apos;)" />

            <FUNCTION id="toSerch" >
                <FUNCTIONITEM cmd="action:go(&apos;root.navigation&apos;,&apos;SerchDetail&apos;)" />
            </FUNCTION>
        </FUNCTION>
    </FUNCTIONLIST>

    <UI>
        <UILAYOUT
            landscape="1080,1920"
            portrait="1080,1920" >
            <WINDOW
                align="relative"
                defaultImg="embed:/res/pri_18/bg.png"
                layout="0,0,1080,1920" >
                <WINDOW
                    align="linear:horizontal"
                    defaultImg="#ffffff"
                    layout="0,1750,1080,170" >
                    <BUTTON
                        defaultImg="embed:/res/pri/gray_search_off.png"
                        layout="270,170"
                        onClick="{function.toSerch}"
                        pressedImg="embed:/res/pri/gray_search_on.png" />
                    <BUTTON
                        defaultImg="embed:/res/pri/gray_coupon_off.png"
                        layout="270,170"
                        pressedImg="embed:/res/pri/gray_coupon_on.png" />
                    <BUTTON
                        defaultImg="embed:/res/pri/gray_treasure_off.png"
                        layout="270,170"
                        pressedImg="embed:/res/pri/gray_treasure_on.png" />
                    <BUTTON
                        defaultImg="embed:/res/pri/gray_set_off.png"
                        layout="270,170"
                        pressedImg="embed:/res/pri/gray_set_on.png" />
                </WINDOW>
            </WINDOW>
            <WINDOW
                defaultImg="#ff0000"
                layout="0,0,1080,120" >
                <LABEL
                    fontColor="#ffffff"
                    fontSize="72"
                    layout="0,0,1080,120"
                    text="可使用优惠券"
                    textAlign="center" />

                <BUTTON
                    defaultImg="embed:/res/pri/home_button.png"
                    layout="25,15,220,90"
                    onClick="{function.toHome}" />
                <BUTTON
                    defaultImg="embed:/res/pri/red_position_off.png"
                    layout="815,10,100,100"
                    prossedImg="embed:/res/pri/red_position_on.png" />
                <BUTTON
                    defaultImg="embed:/res/pri/red_search_off.png"
                    layout="940,10,100,100"
                    onClick="{function.toSerch}"
                    prossedImg="embed:/res/pri/red_search_on.png" />
            </WINDOW>
            <WINDOW>
            </WINDOW>
        </UILAYOUT>
    </UI>

</MOML>