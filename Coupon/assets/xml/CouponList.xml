<?xml version="1.0" encoding="UTF-8"?>

<MOML>

	<FUNCTIONLIST>

		<FUNCTION id="init">
			<CMD
				cmd="function.setMainCoupon(json.toXml(file.read('http://tourcoupon.net/api/coupon/detail/'+userVariable.couponId+'?access_token=538f1f2612ccf9.51589275')))" />
		</FUNCTION>

		<FUNCTION id="setMainCoupon(cXml)">

			<CMD cmd="couponImg=xpath.evaluateEx(cXml,'/DATA/data/thumbnail/text()')" />
			<CMD cmd="title=xpath.evaluateEx(cXml,'/DATA/data/title/text()')" />
			<CMD cmd="img.defaultImg='http://tourcoupon.net/api2/coupon/image/print.php?code='+couponImg+'&amp;w=195&amp;h=172'" />
			<CMD cmd="a.title.text=title" />
			
			
		</FUNCTION>

		<FUNCTION id="toHome">

			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchMain&apos;)" />
		</FUNCTION>

		<FUNCTION id="toSerch">

			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchDetail&apos;)" />
		</FUNCTION>

		<FUNCTION id="toLocation">

			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchLocation&apos;)" />
		</FUNCTION>
		
		<FUNCTION id="toDown">
			<CMD cmd="action:go('root.navigation','Download')"/>
		</FUNCTION>
	</FUNCTIONLIST>
	<CMD cmd="function.init" />
	<UI>

		<UILAYOUT landscape="1080,1920" portrait="1080,1920">

			<WINDOW align="relative" layout="0,0,1080,1920">

				<WINDOW defaultImg="embed:/res/pri_13/bg.png" layout="0,120,1080,1920"
					scroll="vertical" scrollBarVisible="true">

					
					<IMAGE id="a" align="linear:center" layout="40,36,1000,201" defaultImg="embed:/res/pri_13/gray_box_arrow.png" onClick="{function.toDown}">
						<LABEL id="title" fontColor="#ffffff" fontSize="96" text="" textAlign="center" />
					</IMAGE>
					<IMAGE id="img" layout="70,50,140,140" />

					<BUTTON layout="40,430,400,160" defaultImg="embed:/res/pri_8/orange_box.png"/>
					<BUTTON layout="40,620,400,160" defaultImg="embed:/res/pri_8/green_box.png"/>


				</WINDOW>

				<WINDOW defaultImg="#ff0000" layout="0,0,1080,120">

					<LABEL fontColor="#ffffff" fontSize="72" layout="0,0,1080,120"
						text="按行业搜索" textAlign="center" />

					<BUTTON defaultImg="embed:/res/pri/home_button.png" layout="25,15,220,90"
						onClick="{function.toHome}" />

					<BUTTON defaultImg="embed:/res/pri/red_position_off.png"
						layout="815,10,100,100" prossedImg="embed:/res/pri/red_position_on.png"
						onClick="{function.toLocation}" />

					<BUTTON defaultImg="embed:/res/pri/red_search_off.png"
						layout="940,10,100,100" prossedImg="embed:/res/pri/red_search_on.png"
						onClick="{function.toSerch}" />
				</WINDOW>
			</WINDOW>
		</UILAYOUT>
	</UI>
</MOML>
                    