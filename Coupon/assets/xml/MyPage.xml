				<LIST id="couponList" layout="40,590,1000,950" 
					dataList="/data/list" defaultImg="#00ffffff" divider="none">
					<LISTLAYOUT >
						<IMAGE margin="0,30,0,0" onClick="function.use" layout="0,0,1000,397" defaultImg="embed:/res/pri_18/gray_box_2.png"
							>
							<IMAGE id="img" defaultImg="'http://tourcoupon.net/api2/coupon/image/print.php?code='+{xpath.evaluate('./thumbnail/text()')}+'&amp;w=195&amp;h=172'"
								layout="37,40,196,173" />
							<LABEL id="title" fontColor="#ffffff" fontSize="64"
								layout="253,40,auto,auto" text="{xpath.evaluate('./title/text()')}" />
							<LABEL id="display_name" fontColor="#ffffff" fontSize="24"
								layout="253,100,auto,auto" text="{xpath.evaluate('./category/text()')}" />
							<LABEL id="business_name" fontColor="#ffffff" fontSize="24"
								layout="253,190,auto,auto" text="{xpath.evaluate('./company_name/text()')}" />
							<IMAGE layout="680,20,980,152" defaultImg="#ffffff" />
							<LABEL id="catchprice" fontColor="#ffffff" fontSize="24"
								layout="460,185,auto,auto" text="{xpath.evaluate('./catchprice/text()')}" />
							<LABEL textAlign="right" id="discount" fontColor="#ff0000"
								fontSize="45" layout="680,45,260,auto" text="{xpath.evaluate('./discount/text()')}" />
							<LABEL textAlign="right" id="downloaded" fontColor="#000000"
								fontSize="24" layout="680,110,260,auto"
								text="{xpath.evaluate('./downloadcount/text()')}" />
							<LABEL id="couponId" text="{xpath.evaluate('./ticket_id/text()')}" />
