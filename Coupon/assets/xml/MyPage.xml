<?xml version="1.0" encoding="UTF-8"?>
<MOML>

	<FUNCTIONLIST>

		<FUNCTION id="init">
			<CMD
				cmd="cXml=file.read('http://www.tourcoupon.net/api2/coupon/test3.php?access_token='+userVariable.access+'&amp;type=1')" />
			<CMD cmd="device.log(cXml)" />
			<CMD cmd="cXml = string.replace(cXml, '\n', '')" />
			<CMD cmd="couponList.dataSource=cXml"/>

		</FUNCTION>

		<FUNCTION id="toHome">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchMain&apos;)" />
		</FUNCTION>

		<FUNCTION id="toSerch">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchDetail&apos;)" />
		</FUNCTION>

		<FUNCTION id="toLocation">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchLocation&apos;)" />
		</FUNCTION>

		<FUNCTION id="toSerch">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;SerchDetail&apos;)" />
		</FUNCTION>

		<FUNCTION id="toSetting">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;Setting&apos;)" />
		</FUNCTION>

		<FUNCTION id="toTreasure">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;TreasureInfo&apos;)" />
		</FUNCTION>

		<FUNCTION id="toMyPage">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;MyPage&apos;)" />
		</FUNCTION>

		<FUNCTION id="toUsedCoupon">
			<FUNCTIONITEM
				cmd="action:go(&apos;root.navigation&apos;,&apos;UsedCupon&apos;)" />
		</FUNCTION>

		<FUNCTION id="use">
			<CMD cmd="userVariable.couponId=caller.couponId.text" />
			<CMD cmd="action:go(&apos;root.navigation&apos;,&apos;UseCupon&apos;)" />
		</FUNCTION>

	</FUNCTIONLIST>


	<DATASOURCELIST>


		<DATASOURCE id="mainItem" src="'http://www.tourcoupon.net/api2/coupon/test3.php?access_token='+userVariable.access+'&amp;type=1'" />
	</DATASOURCELIST>



	<UI>
		<UILAYOUT landscape="1080,1920" portrait="1080,1920">
			<WINDOW defaultImg="embed:/res/pri_18/bg.png" layout="0,120,1080,1920"
				scroll="vertical" scrollBarVisible="true">

				<IMAGE defaultImg="embed:/res/pri_18/gray_box_1.png" layout="40,30,1000,450" />

				<WINDOW layout="40,30,500,450">
					<BUTTON layout="100,30,310,310" defaultImg="embed:/res/pri_18/practicable_off.png"
						onClick="{function.toUseCoupon}" prossedImg="embed:/res/pri_18/practicable_on.png" />
					<LABEL fontColor="#ffffff" fontSize="64" layout="0,350,500,auto"
						text="可使用" textAlign='center' />
				</WINDOW>


				<WINDOW layout="540,30,500,450">
					<BUTTON layout="100,30,310,310" defaultImg="embed:/res/pri_18/finish_off.png"
						onClick="{function.toUsedCoupon}" prossedImg="embed:/res/pri_18/finish_on.png" />
					<LABEL fontColor="#ffffff" fontSize="64" layout="0,350,500,auto"
						text="已结束" textAlign='center' />
				</WINDOW>




