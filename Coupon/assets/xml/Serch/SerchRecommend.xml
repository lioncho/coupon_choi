		</FUNCTION>
		
		<FUNCTION id="download(_id)">
			<CMD cmd="userVariable.couponId=_id.couponId.text" />
			<CMD cmd="action:go(&apos;root.navigation&apos;,&apos;Download&apos;)" />
		</FUNCTION>

